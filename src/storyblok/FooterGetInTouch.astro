---
import { storyblokEditable, renderRichText } from '@storyblok/astro';

interface Props {
  blok: {
    headline?: string;
    text?: any;
  };
}

const { blok } = Astro.props;
const textHtml = blok.text ? renderRichText(blok.text) : '';
---

<div {...storyblokEditable(blok)} class="text-white">
  {blok.headline && (
    <h3 class="text-yellow font-bold mb-4">{blok.headline}</h3>
  )}

  {textHtml && (
    <div class="text-white/80 [&>p]:mb-2 [&_a]:text-yellow [&_a]:no-underline [&_a:hover]:underline" set:html={textHtml} />
  )}
</div>
