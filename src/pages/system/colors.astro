---
import SystemLayout from '../../layouts/SystemLayout.astro';

const colors = [
  { name: 'Brand', cssVar: '--color-brand', description: 'Primary brand color - main CTAs and key elements' },
  { name: 'Olive', cssVar: '--color-olive', description: 'Accent color' },
  { name: 'Gold', cssVar: '--color-gold', description: 'Accent color' },
  { name: 'Yellow', cssVar: '--color-yellow', description: 'Button and highlight color' },
  { name: 'Accent Yellow', cssVar: '--color-accent-yellow', description: 'Accent variation' },
  { name: 'Charcoal', cssVar: '--color-charcoal', description: 'Dark text and backgrounds' },
  { name: 'Dark Green', cssVar: '--color-dark-green', description: 'Hero and section backgrounds' },
  { name: 'Tan', cssVar: '--color-tan', description: 'Light background' },
  { name: 'Pale Tan', cssVar: '--color-pale-tan', description: 'Lighter background variation' },
  { name: 'White', cssVar: '--color-white', description: 'Pure white' },
];
---

<SystemLayout title="Color System">
  <div class="max-w-6xl mx-auto">
    <header class="mb-12">
      <h1 class="text-5xl mb-4">Color System</h1>
      <p class="text-xl text-charcoal">
        Brand colors defined in <code class="bg-tan px-2 py-1 rounded">src/styles/global.css</code>
      </p>
    </header>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {colors.map(({ name, cssVar, description }) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div
            class="h-32 w-full"
            style={{ backgroundColor: `var(${cssVar})` }}
          ></div>
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2 text-charcoal">{name}</h2>
            <code class="text-sm bg-pale-tan px-2 py-1 rounded block mb-3 font-mono">
              {cssVar}
            </code>
            <p class="text-charcoal text-sm mb-4">{description}</p>
            <div class="text-xs text-gray-600 font-mono">
              <span class="inline-block" style={{ color: `var(${cssVar})` }}>
                ‚óè Color preview in text
              </span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <section class="mt-16 bg-white rounded-lg shadow-md p-8">
      <h2 class="text-3xl mb-6">Usage Examples</h2>

      <div class="space-y-6">
        <div>
          <h3 class="text-xl font-semibold mb-3 text-charcoal">In Tailwind Classes</h3>
          <pre class="bg-charcoal text-pale-tan p-4 rounded overflow-x-auto"><code>&lt;div class="bg-brand text-white"&gt;
  Brand colored background
&lt;/div&gt;</code></pre>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-3 text-charcoal">In Inline Styles</h3>
          <pre class="bg-charcoal text-pale-tan p-4 rounded overflow-x-auto"><code>&lt;div style="background-color: var(--color-brand);"&gt;
  Brand colored background
&lt;/div&gt;</code></pre>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-3 text-charcoal">In CSS</h3>
          <pre class="bg-charcoal text-pale-tan p-4 rounded overflow-x-auto"><code>.custom-element &#123;
  background: var(--color-brand);
  color: var(--color-white);
&#125;</code></pre>
        </div>
      </div>
    </section>

    <section class="mt-8 bg-tan rounded-lg p-6">
      <h3 class="text-xl font-semibold mb-2 text-charcoal">How to Update Colors</h3>
      <p class="text-charcoal">
        To change any brand color, edit the values in the <code class="bg-white px-2 py-1 rounded">@theme</code> block
        in <code class="bg-white px-2 py-1 rounded">src/styles/global.css</code>. Changes will apply site-wide automatically.
      </p>
    </section>
  </div>
</SystemLayout>
