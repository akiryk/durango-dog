<!-- src/layouts/RootLayout.astro -->
---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Mynerve&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{import.meta.env.DEV && (
			<script type="module">
				import "/src/scripts/dev-grid-overlay.ts";
			</script>
		)}
	</head>
	<body class="h-full bg-white text-stone-800 font-sans">
		<slot />
	</body>
</html>
