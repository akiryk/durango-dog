---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Durango Dog Training</title>
	</head>
	<body class="h-full flex flex-col">
		<header class="flex h-[96px] w-full flex-none">
			<div class="flex-1 bg-olive"></div>
			<nav class="flex items-center gap-8 px-8 bg-gold font-anton text-[20px] tracking-[0.07em] uppercase antialiased">
				<a href="/" class="text-white no-underline">Home</a>
				<a href="/services" class="text-white no-underline">Services</a>
				<a href="/about" class="text-white no-underline">About</a>
				<a href="/contact" class="text-white no-underline">Contact</a>
			</nav>
		</header>

		<main class="flex-1">
			<slot />
		</main>

		<footer class="p-4 text-center">
			<p>&copy; 2025 Durango Dog Training. All rights reserved.</p>
		</footer>
	</body>
</html>
