---
import RootLayout from './RootLayout.astro';
import { useStoryblokApi } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

interface Props {
	title: string;
	isHomePage?: boolean;
}

const { title, isHomePage = false } = Astro.props;

// Fetch footer content from Storyblok
const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get('cdn/stories/home', { version: 'published' });
const footerBlok = data.story.content.body?.find((blok: any) => blok.component === 'footer');

const pathname = Astro.url.pathname;
const isCurrentPage = (href: string) => {
	if (href === '/') return pathname === '/';
	return pathname.startsWith(href);
};

const navItems = [
	{ href: '/', label: 'Home' },
	{ href: '/services', label: 'Services' },
	{ href: '/about', label: 'About' },
	{ href: '/contact', label: 'Contact' },
];

const LogoWrapper = isHomePage ? 'div' : 'a';
const wrapperProps = isHomePage ? {} : { href: '/' };
---

<RootLayout title={`${title} | Durango Dog Training`}>
	<div class="flex flex-col min-h-full" data-page={isHomePage ? 'home' : 'other'}>
		<header class="grid grid-cols-9 h-[48px] lg:h-[65px] w-full flex-none relative">
			<!-- Logo - positioned absolutely within header -->
			<LogoWrapper
				class="absolute top-[16px] left-[16px] z-10 transition-all duration-300"
				{...wrapperProps}
			>
				<img
					src="/images/logo-dd.svg"
					alt="Durango Dog Training"
					class="logo w-[280px]"
				/>
			</LogoWrapper>

			<div class="col-span-5 lg:col-span-6 bg-olive"></div>
			<nav class="col-span-4 lg:col-span-3 flex items-center justify-evenly bg-[linear-gradient(to_bottom,var(--color-charcoal)_calc(50%),black_100%)] font-opensans font-semibold text-[16px] lg:text-[18px] tracking-[0.07em] uppercase antialiased">
				{navItems.map((item) =>
					isCurrentPage(item.href) ? (
						<span class="text-yellow py-2 px-[13px]">{item.label}</span>
					) : (
						<a href={item.href} class="text-white no-underline transition-colors duration-500 ease-out hover:text-yellow py-2 px-[13px]">{item.label}</a>
					)
				)}
			</nav>
		</header>

		<main class="flex-1">
			<slot />
		</main>

		<div class={isHomePage ? 'relative -top-[100px]' : ''}>
			{footerBlok && (
				<StoryblokComponent blok={footerBlok} />
			)}
		</div>
	</div>
</RootLayout>
