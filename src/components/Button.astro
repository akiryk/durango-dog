---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'highlight';
  size?: 'small' | 'large';
  fullWidth?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'small',
  fullWidth = false,
  class: className = ''
} = Astro.props;

// Base styles for all buttons
const baseStyles = 'btn inline-block font-opensans font-bold text-center rounded-[6px] transition-colors';

// Variant styles (btn-* classes override default anchor colors in global.css)
const variantStyles = {
  primary: 'btn-primary bg-charcoal border border-white/40 hover:bg-charcoal/40',
  secondary: 'btn-secondary bg-transparent border border-charcoal hover:bg-charcoal/10',
  highlight: 'btn-highlight bg-yellow border border-white hover:bg-yellow/10'
};

// Size styles
const sizeStyles = {
  small: 'text-[16px] py-[6px] px-6',
  large: 'text-[20px] py-[12px] px-8'
};

// Full width style
const widthStyle = fullWidth ? 'w-full' : '';

const combinedStyles = [
  baseStyles,
  variantStyles[variant],
  sizeStyles[size],
  widthStyle,
  className
].filter(Boolean).join(' ');
---

<a href={href} class={combinedStyles}>
  <slot />
</a>
