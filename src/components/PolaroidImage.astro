---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  rotation?: 'left' | 'right' | 'none';
  customRotation?: string;
}

const { src, alt, rotation = 'right', customRotation } = Astro.props;

const rotationClass = customRotation || {
  left: '-rotate-2',
  right: 'rotate-2',
  none: 'rotate-0'
}[rotation];
---

<div class={`inline-block bg-white p-3 ${rotationClass} shadow-lg`}>
  <Image
    src={src}
    alt={alt}
    class="block w-full h-auto"
  />
</div>
